<div id="blog-container">
  <ul id="blog-entries">
    <li class="blog_entry">
      <%= render :partial => 'spree/blog_entries/blog', :locals => {:e => @blog_entry} %>
    </li>
  </ul>
  <br class="clearfloat">
</div> 

<% content_for :sidebar do %>
  <div id="blog-sidebar">
    <%= render :partial => 'spree/blog_entries/news_archive', :object => @news_archive %>
  </div>
<% end %>        